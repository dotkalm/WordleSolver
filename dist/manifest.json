{
    "manifest_version": 2,
    "name": "Wordle Solver",
    "description": "A wordle solver with options",
    "version": "1.0.0",
    "icons": {
        "16": "icons/16_production.png",
        "32": "icons/32_production.png",
        "48": "icons/48_production.png",
        "128": "icons/128_production.png"
    },
    "browser_action": {
        "default_title": "a wordle solver",
        "default_icon": {
            "16": "icons/16_disabled.png",
            "32": "icons/32_disabled.png",
            "48": "icons/48_disabled.png",
            "128": "icons/128_disabled.png"
        },
        "default_popup": "disabled.html"
    },
    "background": {
        "scripts": ["js/serviceWorker.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "js": ["js/contentScript.js"],
            "matches": [
                "*://*.nytimes.com/*"
            ]
        }
    ],
    "cross_origin_embedder_policy": {
        "value": "require-corp"
    },
    "cross_origin_opener_policy": {
        "value": "same-origin"
    },
    "permissions": [
        "tabs", 
        "activeTab"
    ]
}
